<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ximsfei.dynamicskindemo.widget.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:text="custom text view" />

    <com.ximsfei.dynamicskindemo.widget.CustomTextView2
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:text="custom text view 2"
        android:textColor="@color/color_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:indeterminateDrawable="@drawable/progress_bar" />
        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_selector"
            android:text="加进度"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_horizontal"
        style="@style/progress_horizontal_style"
        android:progress="15"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
</LinearLayout>